{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "lib": ["esnext"]
}
